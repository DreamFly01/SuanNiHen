<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">

    <include layout="@layout/heard_layout"></include>
    <android.support.v4.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300pt"
                android:background="@drawable/pay_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="30pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单编号"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />

                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T20181222704264342"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="30pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="合计金额"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥78.00"
                    android:textColor="@color/app_red"
                    android:textSize="28pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="30pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="经验值抵扣"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />

                <TextView
                    android:id="@+id/tv_integerl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />

                <ImageView
                    android:id="@+id/iv_01"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginLeft="40pt"
                    android:background="@drawable/pay_normall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="30pt">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_gravity="center"
                    android:background="@drawable/pay_account_bg" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:layout_weight="1"
                    android:text="账户余额"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />

                <ImageView
                    android:id="@+id/iv_02"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginLeft="40pt"
                    android:background="@drawable/pay_normall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="30pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择支付方式"
                    android:textColor="@color/gray_1"
                    android:textSize="28pt" />

                <LinearLayout
                    android:id="@+id/ll_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="30pt"
                    android:paddingBottom="30pt">

                    <ImageView
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:layout_gravity="center"
                        android:background="@drawable/wechat_pay_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10pt"
                        android:layout_weight="1"
                        android:text="微信支付"
                        android:textColor="@color/gray_1"
                        android:textSize="28pt" />

                    <ImageView
                        android:id="@+id/iv_03"
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:layout_marginLeft="40pt"
                        android:background="@drawable/pay_normall" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2pt"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="30pt"
                    android:paddingBottom="30pt">

                    <ImageView
                        android:layout_width="45pt"
                        android:layout_height="45pt"
                        android:layout_gravity="center"

                        android:background="@drawable/ali_pay_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:layout_weight="1"
                        android:text="支付宝支付"
                        android:textColor="@color/gray_1"
                        android:textSize="@dimen/txtSize_28" />

                    <ImageView
                        android:id="@+id/iv_04"
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:layout_marginLeft="40pt"
                        android:background="@drawable/pay_normall" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_weight="4.9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/app_red"
            android:gravity="center"
            android:padding="30pt"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="30pt" />
    </LinearLayout>
</LinearLayout>
