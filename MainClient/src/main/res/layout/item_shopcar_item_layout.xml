<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="15pt">

    <LinearLayout
        android:id="@+id/ll_chose"
        android:layout_width="100pt"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_item_chose"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_gravity="center"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="20pt"
            android:background="@drawable/pay_normall"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_product_logo"
        android:layout_width="150pt"
        android:layout_height="150pt"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="4pt"
        android:layout_weight="1"
        android:paddingLeft="10pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:lines="2"
            android:textColor="@color/gray_1"
            android:textSize="@dimen/txtSize_28" />

        <TextView
            android:id="@+id/tv_suk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="top"
            android:textColor="@color/color_grey_666666"
            android:lines="1"
            android:textSize="@dimen/txtSize_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/app_red"
                android:textSize="@dimen/txtSize_28" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="44pt"
                android:layout_height="44pt"
                android:layout_gravity="bottom"
                android:background="@drawable/product_delete_bg" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="60pt"
                android:layout_height="44pt"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_range_gray_bg"
                android:gravity="center"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/txtSize_24" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="44pt"
                android:layout_height="44pt"
                android:layout_gravity="bottom"
                android:layout_marginRight="20pt"
                android:background="@drawable/product_add_bg" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
