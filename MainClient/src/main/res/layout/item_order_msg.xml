<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20pt"
    android:paddingBottom="20pt"
    android:background="@drawable/food_head_shape"
    android:orientation="vertical"
    android:paddingStart="10pt">


    <TextView
        android:id="@+id/self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:padding="10pt"
        android:text="预定信息"
        android:textColor="#ff323231"
        android:textSize="@dimen/txtSize_30" />

    <LinearLayout
        android:id="@+id/li_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用餐人数:"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_28" />

        <TextView
            android:id="@+id/tv_people_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text=""
            android:textColor="@color/app_red"
            android:textSize="@dimen/txtSize_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="用餐时间:"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_26" />


        <TextView
            android:id="@+id/tv_people_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"

            android:text=""
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/txtSize_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="座位位置:"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_26" />


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:text=""
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/txtSize_26" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10pt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预定信息:"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_26" />


        <TextView
            android:id="@+id/tv_looking_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:text=""
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/txtSize_26" />

    </LinearLayout>
</LinearLayout>