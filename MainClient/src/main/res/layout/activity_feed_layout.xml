<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg">
<include layout="@layout/heard_layout"></include>
    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30pt"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:textColor="@color/gray_1"

            android:text="意见类型"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:textColor="@color/gray_1"

            android:text="请选择"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200pt"
        android:padding="30pt"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_comment"
           android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:hint="请填写您需要反馈的内容（必填）"
            android:textColor="@color/txt_dark"
android:textColorHint="@color/gray_1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="34pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:textColor="@color/txt_dark"
            android:text="上传图片"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:paddingLeft="90pt"
            android:paddingRight="90pt"
            android:paddingTop="30pt"
            android:paddingBottom="30pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_img_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/3"
            android:textSize="24pt"
            android:layout_gravity="right"
            android:layout_marginRight="30pt"
            android:textColor="@color/gray_1"

            />
        <LinearLayout
            android:padding="30pt"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_exit"
                android:gravity="center"
                android:padding="20pt"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"
                android:textSize="30pt"
                android:background="@drawable/shape_soild_red_bg"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
