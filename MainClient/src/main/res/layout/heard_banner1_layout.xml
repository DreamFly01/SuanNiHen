<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_app_bg">

    <LinearLayout
        android:id="@+id/layout_four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">


        <ImageView
            android:id="@+id/img_main_left"
            android:layout_width="187pt"
            android:layout_height="227pt"
            android:scaleType="centerCrop"
            android:background="@drawable/img_load1_error"
            />


        <LinearLayout
            android:layout_width="362pt"
            android:layout_height="227pt"
            android:layout_marginLeft="4pt"
            android:layout_marginRight="4pt"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main_top"
                android:layout_width="match_parent"
                android:layout_height="113pt"
                android:scaleType="centerCrop"
                android:background="@drawable/up_or_down_bg"
                />

            <ImageView
                android:id="@+id/img_main_buttom"
                android:layout_width="match_parent"
                android:layout_height="113pt"
                android:layout_marginTop="4pt"
                android:scaleType="centerCrop"
                android:background="@drawable/up_or_down_bg"

                />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_main_right"
            android:layout_width="187pt"
            android:layout_height="227pt"
            android:scaleType="centerCrop"
            android:background="@drawable/img_load1_error"

            />

    </LinearLayout>
</LinearLayout>
