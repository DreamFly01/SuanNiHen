<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#ffffff"


    >


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <View
        style="@style/login_input_line"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y180">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:text="合计:"
          android:textSize="@dimen/x38"
          android:layout_marginLeft="@dimen/x15"
          />


      <TextView
          android:id="@+id/txt_amt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textColor="@color/txt_amt"
          android:textSize="@dimen/x48"
          android:text="¥0"
          />


      <TextView
          android:id="@+id/txt_tran"
          android:layout_width="match_parent"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="@dimen/x20"
          android:text="(不含运费)"
          />


      <TextView
          android:id="@+id/txt_go"
          android:layout_width="@dimen/x260"
          android:layout_height="match_parent"
          android:layout_gravity="right|center_vertical"
          android:background="#f7003e"
          android:textColor="@color/white"
          android:gravity="center"
          android:text="去结算"
          />


    </LinearLayout>
  </LinearLayout>

</LinearLayout>
