<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y127"
                android:background="@color/topbar_bg"
                android:orientation="horizontal">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/y127"

      android:background="@color/topbar_bg"

      >


    <LinearLayout
        android:id="@+id/layout_location_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_gravity="center_vertical"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/address_icon"
          android:layout_gravity="center_vertical"
          />

      <TextView
          android:id="@+id/txt_location_open"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:textSize="@dimen/x40"
          android:layout_marginLeft="@dimen/x10"
          android:text=""
          android:layout_gravity="center_vertical"
          />

    </LinearLayout>




  </LinearLayout>

  <ImageView
      android:layout_width="@dimen/x174"
      android:layout_height="@dimen/y71"
      android:src="@drawable/logosuannhen"
      android:layout_centerInParent="true"
      />

  <View
      android:id="@+id/bg_toolbar_open"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

</RelativeLayout>