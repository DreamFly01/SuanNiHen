<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40pt"
        android:layout_height="40pt"
        android:layout_gravity="right"
        android:layout_marginTop="20pt"
        android:layout_marginRight="20pt"
        android:src="@drawable/icon_delete" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20pt"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_product_logo"
                    android:layout_width="100pt"
                    android:layout_height="100pt"

                    android:layout_marginLeft="20pt"
                    android:layout_marginBottom="10pt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="80pt"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="-----------------"
                        android:textColor="@color/gray_1"
                        android:textSize="28pt" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20pt"
                        android:text="---"
                        android:textColor="@color/app_red"
                        android:textSize="28pt" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2pt"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_suk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20pt"

                android:orientation="horizontal"
                android:padding="15pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:textColor="@color/gray_1"
                    android:textSize="26pt" />

                <TextView
                    android:id="@+id/tv_remain_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(400)"
                    android:textColor="@color/app_red"
                    android:textSize="26pt" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="44pt"
                    android:layout_height="44pt"
                    android:background="@drawable/product_delete_bg" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="100pt"
                    android:layout_height="44pt"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_range_gray_bg"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="44pt"
                    android:layout_height="44pt"
                    android:background="@drawable/product_add_bg" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_comfire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_red"
        android:gravity="center"
        android:padding="30pt"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="30pt"></TextView>
</LinearLayout>
