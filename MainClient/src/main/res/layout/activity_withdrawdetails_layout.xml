<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    >

    <include layout="@layout/heard_white_layout"></include>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="28pt"
        android:id="@+id/iv_logo"
        android:layout_width="100pt"
        android:layout_height="100pt" />
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="断了线的风筝"
        android:textColor="@color/txt_dark"
        android:textSize="24pt"
        />
    <LinearLayout
        android:layout_marginTop="40pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="¥"
            android:textColor="#FB4B2A"
            android:textSize="24pt"
            />
        <TextView
            android:id="@+id/tv_myMoney"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="100"
            android:textColor="#FB4B2A"
            android:textSize="36pt"
            />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="85pt"
        android:layout_width="match_parent"
        android:layout_height="12pt"
        android:background="#E7E7E7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24pt"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="付款方式"
            android:textColor="@color/gray_1"
            android:textSize="31pt"
            />
        <TextView
            android:id="@+id/tv_payState"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="余额"
            android:textColor="@color/txt_dark"
            android:textSize="31pt"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="#E7E7E7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24pt"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品名称"
            android:textColor="@color/gray_1"
            android:textSize="31pt"
            />
        <TextView
            android:id="@+id/tv_content"
    android:gravity="right"
            android:layout_weight="1"
            android:layout_marginLeft="80pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="助行器老人轻便折叠多功能辅助行走器助步器下肢训练器医疗家"
            android:textColor="@color/txt_dark"
            android:textSize="31pt"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="#E7E7E7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24pt"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单编号"
            android:textColor="@color/gray_1"
            android:textSize="31pt"
            />
        <TextView
            android:id="@+id/tv_orderNo"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="余额"
            android:textColor="@color/gray_1"
            android:textSize="31pt"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="#E7E7E7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24pt"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="下单时间"
            android:textColor="@color/gray_1"
            android:textSize="31pt"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="余额"
            android:textColor="@color/gray_1"
            android:textSize="31pt"
            />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
       <ImageView
           android:id="@+id/iv_process"
           android:layout_width="match_parent"
           android:layout_height="496pt" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:background="#E7E7E7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24pt"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提现金额"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_marginLeft="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="余额"
                android:textColor="@color/txt_dark"
                android:textSize="31pt"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:background="#E7E7E7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24pt"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手续费"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />
            <TextView
                android:id="@+id/tv_sxf"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginLeft="80pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/txt_dark"
                android:textSize="31pt"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:background="#E7E7E7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24pt"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="到账银行卡"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />
            <TextView
                android:id="@+id/tv_bankCard"
                android:layout_marginLeft="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="余额"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:background="#E7E7E7"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24pt"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="发起提现"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />
            <TextView
                android:id="@+id/tv_withdraw_time"
                android:layout_marginLeft="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="余额"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24pt"
            >
            <TextView

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="流水号"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />
            <TextView
                android:id="@+id/tv_lsh"
                android:layout_marginLeft="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="余额"
                android:textColor="@color/gray_1"
                android:textSize="31pt"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
