<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#77a2f9">
    <LinearLayout
        android:id="@+id/rl_heard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20pt"

        >

        <LinearLayout
            android:paddingBottom="20pt"
            android:paddingLeft="20pt"
            android:paddingRight="40pt"
            android:id="@+id/heard_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="20pt"
                android:layout_height="31pt"
                android:src="@drawable/left_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/heard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="36pt" />

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30pt"
            android:visibility="visible"

            >
            <ImageView
                android:id="@+id/heard_menu"
                android:layout_width="42pt"
                android:layout_height="40pt"
                android:src="@drawable/store_share"
                android:visibility="gone" />
            <TextView
                android:id="@+id/heard_tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="50pt"
                android:textSize="30pt"
                />
        </FrameLayout>
    </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_marginBottom="30pt"
    android:layout_marginTop="120pt"
    android:layout_marginLeft="30pt"
    android:layout_marginRight="30pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/merchants_bg">
    <LinearLayout
        android:layout_marginTop="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_01"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_28"
                android:text="个人入驻"
                android:textColor="@color/app_red"
                />
            <ImageView
                android:id="@+id/iv_01"
                android:layout_marginTop="10pt"
                android:layout_width="150pt"
                android:layout_height="4pt"
                android:background="@color/app_red"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_02"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_28"
                android:text="企业入驻"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/iv_02"
                android:visibility="gone"
                android:layout_marginTop="10pt"
                android:layout_width="150pt"
                android:layout_height="4pt"
                android:background="@color/app_red"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_03"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txtSize_28"
                android:text="本地入驻"
                />
            <ImageView
                android:id="@+id/iv_03"
                android:visibility="gone"
                android:layout_marginTop="10pt"
                android:layout_width="150pt"
                android:layout_height="4pt"
                android:background="@color/app_red"/>
        </LinearLayout>
    </LinearLayout>
<include layout="@layout/entry_person_layout"></include>
    <include layout="@layout/entry_company_layout"></include>
    <TextView
        android:layout_marginLeft="30pt"
        android:layout_marginRight="30pt"
        android:layout_marginTop="40pt"
        android:id="@+id/tv_commit"
        android:gravity="center"
        android:padding="20pt"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="30pt"
        android:background="@drawable/shape_soild_red_5_bg"
        android:textColor="@color/white"

        />
    <LinearLayout
        android:layout_marginTop="42pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/radio_button_1"
            android:layout_width="26pt"
            android:layout_height="23pt"
            android:layout_gravity="center"
            android:background="@drawable/xiyi_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20pt"
            android:text="我已阅读并同意"
            android:textSize="22pt"
            android:textColor="@color/gray_1"

            />
        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《算你狠商户协议》"
            android:textColor="@color/app_red"
            android:textSize="22pt" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="40pt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电脑端登录地址："
        android:textColor="@color/gray_1"

        android:textSize="@dimen/txtSize_26"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_1"

        android:text="http:test.hnyunshang.com/PC_Seller"
        android:textSize="@dimen/txtSize_26"/>
</LinearLayout>
</LinearLayout>
