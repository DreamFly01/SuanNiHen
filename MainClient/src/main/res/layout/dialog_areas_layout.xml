<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"

    android:orientation="vertical"
    android:paddingBottom="20pt">

    <View
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:background="@color/app_red" />

    <RelativeLayout
        android:id="@+id/ll_dimiss"
        android:layout_width="match_parent"
        android:layout_height="120pt"
        android:background="@color/app_red"
        android:fitsSystemWindows="false">

        <ImageView
            android:layout_width="40pt"
            android:layout_height="30pt"
            android:layout_centerVertical="true"
            android:layout_marginRight="30pt"
            android:background="@drawable/nim_actionbar_white_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择地区"
            android:textColor="@color/white"
            android:textSize="30pt" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="20pt"
        android:text="定位区县"
        android:textColor="@color/gray_1"
        android:textSize="26pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="20pt"
            android:background="@color/white"
            android:paddingLeft="20pt"
            android:paddingTop="10pt"
            android:paddingRight="20pt"
            android:paddingBottom="10pt"
            android:text="定位区县"
            android:textColor="@color/gray_1"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tv_addressqg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="20pt"
            android:background="@color/white"
            android:paddingLeft="20pt"
            android:paddingTop="10pt"
            android:paddingRight="20pt"
            android:paddingBottom="10pt"
            android:text="全国"
            android:textColor="@color/gray_1"
            android:textSize="30pt" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="20pt"
        android:text="最近访问"
        android:textColor="@color/gray_1"
        android:textSize="26pt" />

    <TextView
        android:id="@+id/tv_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:paddingLeft="20pt"
        android:paddingTop="10pt"
        android:paddingRight="20pt"
        android:paddingBottom="10pt"
        android:text="定位区县"
        android:textColor="@color/gray_1"
        android:textSize="30pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="20pt"
        android:text="选择已覆盖的区县"
        android:textSize="26pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="20pt">

        <LinearLayout
            android:id="@+id/ll_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择省"
                android:textColor="@color/app_red"
                android:textSize="30pt" />

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="80pt"
                android:layout_height="2pt"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="20pt"
                android:background="@color/app_red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择市"
                android:textColor="@color/txt_dark"
                android:textSize="30pt" />

            <ImageView
                android:id="@+id/iv_02"
                android:layout_width="80pt"
                android:layout_height="2pt"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="20pt"
                android:background="@color/app_red"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择区/县"
                android:textColor="@color/txt_dark"
                android:textSize="30pt" />

            <ImageView
                android:id="@+id/iv_03"
                android:layout_width="80pt"
                android:layout_height="2pt"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="20pt"
                android:background="@color/app_red"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>
</LinearLayout>
