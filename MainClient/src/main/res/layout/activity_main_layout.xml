<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    >


    <FrameLayout
        android:id="@+id/framecontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_tab"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10pt"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="18pt"
            android:background="@color/white"
            android:id="@+id/ll_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginTop="33pt"
            >

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="48pt"
                android:layout_height="48pt"
                android:background="@drawable/tab_1_selected"
                />

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="@dimen/txtSize_24"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/ll_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="18pt"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginTop="33pt"
            >

            <ImageView
                android:id="@+id/iv_02"
                android:layout_width="48pt"
                android:layout_height="48pt"
                android:background="@drawable/tab_3"
                />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="@dimen/txtSize_24"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/tab_bg"
            android:id="@+id/ll_03"
            android:layout_width="0dp"
            android:layout_height="120pt"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/iv_03"
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:background="@drawable/tab_6"
                />

            <TextView
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textSize="@dimen/txtSize_24"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="18pt"

            android:background="@color/white"
            android:id="@+id/ll_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >

            <ImageView

                android:id="@+id/iv_04"
                android:layout_width="48pt"
                android:layout_height="48pt"
                android:background="@drawable/tab_4"
                />

            <TextView
                android:id="@+id/tv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="@dimen/txtSize_24"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="18pt"

            android:background="@color/white"
            android:id="@+id/ll_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginTop="33pt"
            >

            <ImageView

                android:id="@+id/iv_05"
                android:layout_width="48pt"
                android:layout_height="48pt"
                android:background="@drawable/tab_5"
                />

            <TextView
                android:id="@+id/tv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="@dimen/txtSize_24"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
