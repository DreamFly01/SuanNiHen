<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/rl_head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30pt"
            android:paddingTop="20pt"
            android:paddingRight="30pt"
            android:paddingBottom="20pt">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:background="@drawable/gray_back_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="58pt"
                android:layout_height="58pt"
                android:background="@drawable/gray_share_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_red"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/heard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30pt"
                android:paddingTop="20pt"
                android:paddingRight="30pt"
                android:paddingBottom="20pt">

                <ImageView
                    android:layout_width="20pt"
                    android:layout_height="31pt"
                    android:src="@drawable/left_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSize_30" />

                    <ImageView
                        android:id="@+id/iv_01"
                        android:layout_width="match_parent"
                        android:layout_height="4pt"
                        android:layout_marginTop="10pt"
                        android:background="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSize_30" />

                    <ImageView
                        android:id="@+id/iv_03"
                        android:layout_width="match_parent"
                        android:layout_height="4pt"
                        android:layout_marginTop="10pt"
                        android:background="@color/white"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20pt"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详情"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSize_30" />

                    <ImageView
                        android:id="@+id/iv_02"
                        android:layout_width="match_parent"
                        android:layout_height="4pt"
                        android:layout_marginTop="10pt"
                        android:background="@color/white"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30pt"
                android:paddingTop="20pt"
                android:paddingRight="30pt"
                android:paddingBottom="20pt">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="41pt"
                    android:src="@drawable/store_share" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_chat"
            android:layout_marginTop="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40pt"
            android:paddingTop="5pt">

            <ImageView
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_gravity="center"
                android:src="@drawable/menu_chat_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="客服"
                android:textColor="@color/gray_1"
                android:textSize="30pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40pt"
            android:paddingTop="5pt">

            <ImageView
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_gravity="center"
                android:src="@drawable/menu_store_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity=""
                android:text="客服"
                android:textColor="@color/gray_1"
                android:textSize="30pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buy_or_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_buy_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40pt"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5pt">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_gravity="center"
                    android:src="@drawable/tab_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity=""
                    android:text="购物车"
                    android:textColor="@color/gray_1"
                    android:textSize="30pt" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_add_buy_car"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_yellow"
                android:gravity="center"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="30pt" />

            <TextView
                android:id="@+id/tv_buy_away"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/app_red"
                android:gravity="center"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="30pt" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
