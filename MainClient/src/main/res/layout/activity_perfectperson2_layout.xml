<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">
    <include layout="@layout/heard_layout"></include>
    <LinearLayout
        android:background="@drawable/shape_white_5"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="入驻姓名"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_name"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:hint="店铺名称不可修改"
            android:textColorHint="@color/gray_1"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_white_5"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="主营类目"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_type"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="请选择类目"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_white_5"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="登录账户"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_phone"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_white_5"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="设置密码"
            android:textColor="@color/black"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_psw1"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:textColorHint="@color/gray_1"
            android:hint="请输入商家后台登录密码"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_white_5"
        android:layout_marginTop="20pt"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20pt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="确认密码"
            android:textColor="@color/black"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_psw2"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:hint="再次输入密码"
            android:textColorHint="@color/gray_1"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <TextView
        android:layout_marginLeft="30pt"
        android:layout_marginRight="30pt"
        android:id="@+id/tv_commit"
        android:gravity="center"
        android:padding="20pt"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="30pt"
        android:background="@drawable/shape_soild_red_5_bg"
        android:textColor="@color/white"
        />
</LinearLayout>
