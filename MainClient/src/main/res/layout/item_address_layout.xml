<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/color_app_bg" />
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30pt">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="35pt"
            android:layout_gravity="center"
            android:background="@drawable/address_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/txt_dark"
                    android:textSize="30pt" />

                <TextView
                    android:id="@+id/tv_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_dark"
                    android:textSize="30pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_marginTop="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text=""
                android:textSize="24pt" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/color_app_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="30pt">

       <LinearLayout
           android:layout_gravity="center"
           android:layout_weight="1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_isDefult"
               android:padding="10pt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="默认地址"
               android:textSize="24pt"
               android:textColor="@color/app_red"
               android:background="@drawable/shape_red_range"/>
       </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@drawable/edit_address_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text="编辑"
                android:textColor="@color/txt_dark"
                android:textSize="24pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50pt"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@drawable/del_address_bg" />
            <TextView
                android:textColor="@color/txt_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text="删除"
                android:textSize="24pt" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
