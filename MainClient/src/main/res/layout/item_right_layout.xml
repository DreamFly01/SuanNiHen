<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30pt">

        <ImageView
            android:id="@+id/iv_product_logo1"
            android:layout_width="120pt"
            android:layout_height="120pt"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/txtSize_30" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_grey_666666"
                android:textSize="@dimen/txtSize_28" />

            <TextView
                android:id="@+id/tv_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_grey_666666"
                android:textSize="@dimen/txtSize_28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80pt"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥24"
                    android:textColor="@color/app_red"
                    android:textSize="@dimen/txtSize_28" />

                <TextView
                    android:id="@+id/tv_suk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5pt"
                    android:layout_weight="1"

                    android:text="¥24"
                    android:textColor="@color/color_grey_999999"
                    android:textSize="@dimen/txtSize_28" />

                <LinearLayout
                    android:id="@+id/ll_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5pt"
                    android:paddingTop="10pt"
                    android:paddingRight="5pt"
                    android:paddingBottom="10pt">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="50pt"
                        android:layout_height="50pt"
                        android:layout_gravity="center"
                        android:src="@drawable/shopcart_logo_delete" />

                    <TextView
                        android:id="@+id/tv_goodsNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:text="1"
                        android:textColor="@color/app_red"
                        android:textSize="26pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_marginLeft="20pt"
                    android:src="@drawable/shopcart_logo_add" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6pt"
        android:background="@drawable/line_gray"
        android:layerType="software" />
</LinearLayout>
