<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_red"
        android:gravity="center_horizontal"
        android:paddingBottom="20pt"
        >
        <LinearLayout
            android:id="@+id/ll_back"
            android:paddingLeft="30pt"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="50pt"
            android:layout_height="30pt"
            android:background="@drawable/search_back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="60pt"
            android:background="@drawable/bg_home_search"
            >
            <ImageView
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_gravity="center_vertical"
                android:src="@drawable/home_search_icon"
                android:layout_marginLeft="25pt"
                />
            <EditText
                android:id="@+id/et_search1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="26pt"
                android:textColor="@color/et_txt_color"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10pt"
                android:hint="搜宝贝"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26pt"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20pt"
            android:text="搜索"
            android:layout_marginRight="30pt"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_01"
            android:padding="20pt"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/app_red"
            android:text="商品"/>
        <TextView
            android:id="@+id/tv_02"
            android:padding="20pt"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_30"
            android:textColor="@color/black"
            android:text="店铺"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/color_app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/loading_layout"></include>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10pt"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

</LinearLayout>
