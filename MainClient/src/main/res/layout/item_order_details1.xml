<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/food_head_shape"
    android:paddingTop="20pt"
    android:paddingBottom="20pt"
    android:orientation="vertical"
    android:paddingStart="10pt">


    <TextView
        android:id="@+id/self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:padding="10pt"
        android:text="预定成功"
        android:textColor="#ff323231"
        android:textSize="@dimen/txtSize_30" />

    <LinearLayout
        android:id="@+id/li_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10pt"
            android:text="您已预定成功,请按时到店就餐,座位最晚给您保留到"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_24" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10pt"
            android:text="08:00"
            android:textColor="@color/app_red"
            android:textSize="@dimen/txtSize_30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10pt"
            android:text="商家 地址:"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_26" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:padding="10pt"
            android:text=""
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/txtSize_30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10pt">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textColor="@color/color_grey_999999"
            android:textSize="@dimen/txtSize_26" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="@dimen/txtSize_72"
            android:textColor="@color/color_yellow"
            android:textSize="@dimen/txtSize_26" />
    </LinearLayout>


</LinearLayout>