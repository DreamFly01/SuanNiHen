<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30pt"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:text="商品评价（3658）"
            android:textColor="@color/txt_dark"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="10pt"
                >


                <TextView
                    android:layout_weight="1"
                    android:paddingLeft="10pt"
                    android:paddingRight="10pt"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24pt"
                    android:text="查看全部"
                    android:textColor="@color/gray_1"
                    />
                <TextView
                    android:layout_marginRight="30pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24pt"
                    android:text=">"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_marginLeft="30pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="48pt"
                android:layout_height="48pt"
                android:background="@color/orange"
                />
            <TextView
                android:layout_marginLeft="19pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:textSize="30pt"
                android:textColor="@color/gray_1"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="15pt"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="28pt"
            android:textColor="@color/txt_dark"
            />
        <TextView
            android:layout_marginBottom="30pt"
            android:layout_marginTop="10pt"
            android:layout_marginLeft="30pt"
            android:layout_marginRight="30pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色：蓝色    尺码：XL"
            android:textSize="22pt"
            android:textColor="@color/gray_1"
            />
    </LinearLayout>

    <LinearLayout
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20pt"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/iv_store_logo"
                android:layout_width="100pt"
                android:layout_height="100pt"
                />
            <LinearLayout
                android:layout_marginLeft="20pt"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_store"
                    android:textSize="24pt"
                    android:text="Mixi 定制"
                    android:textColor="@color/gray_1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24pt"
                        android:textColor="@color/gray_1"
                        android:text="店铺星级："/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="18pt"
                        android:layout_height="18pt"
                        android:src="@drawable/collection_selected"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:paddingTop="5pt"
                android:paddingBottom="5pt"
                android:paddingLeft="20pt"
                android:paddingRight="20pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="进店逛逛"
                android:layout_gravity="center"
                android:background="@drawable/shape_soild_red_bg"
                android:textSize="30pt"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30pt"
        android:background="@color/white"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="6pt"
            android:layout_height="30pt"
            android:background="@color/app_red"
            />
        <TextView
            android:layout_marginLeft="15pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:text="商家推荐"
            android:textColor="@color/txt_dark"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="10pt"
            >


            <TextView
                android:layout_weight="1"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24pt"
                android:textColor="@color/gray_1"
                android:text="查看全部"
                />
            <TextView
                android:layout_marginRight="30pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24pt"
                android:text=">"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods2_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
