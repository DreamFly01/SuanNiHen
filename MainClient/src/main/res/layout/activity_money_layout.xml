<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg">
    <include layout="@layout/heard_layout"></include>
    <include layout="@layout/loading_layout"></include>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200pt"
        android:background="@color/app_red"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="账户余额(元)："
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_40"
            android:text="84957454"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_withdraw"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30pt"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="30pt"
            android:background="@drawable/withdraw_bg"/>
        <TextView
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            android:text="提现"
            android:textSize="@dimen/txtSize_28"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/arrow_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_bankcards"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30pt"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="30pt"
            android:background="@drawable/bank_bg"/>
        <TextView
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            android:text="我的银行卡"
            android:textSize="@dimen/txtSize_28"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/arrow_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_back_money"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30pt"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="30pt"
            android:background="@drawable/money_bg"/>
        <TextView
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待返金额"
            android:textColor="@color/gray_1"

            android:textSize="@dimen/txtSize_28"/>
        <TextView
            android:id="@+id/tv_back_money"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$999"
            android:textColor="@color/app_red"
            android:textSize="@dimen/txtSize_26"/>
        <ImageView
            android:layout_marginLeft="10pt"
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/arrow_right"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_score"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30pt"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="35pt"
            android:layout_height="30pt"
            android:background="@drawable/score_bg"/>
        <TextView
            android:layout_marginLeft="10pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分"
            android:textColor="@color/gray_1"

            android:textSize="@dimen/txtSize_28"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_marginLeft="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$999"
            android:textColor="@color/app_red"
            android:textSize="@dimen/txtSize_26"/>
        <ImageView
            android:layout_marginLeft="10pt"
            android:layout_gravity="center"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:background="@drawable/arrow_right"/>
    </LinearLayout>
</LinearLayout>
