<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fdl.activity.food.FoodOrderManageActivity">

    <!--<include layout="@layout/loading_layout" />-->
    <include layout="@layout/heard_white_layout" />



    <android.support.design.widget.TabLayout
        android:id="@+id/tab_order"
        android:layout_width="match_parent"
        android:layout_height="80pt"
        app:tabIndicatorColor="@color/app_red"
        app:tabSelectedTextColor="@color/app_red"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Small" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/color_app_bg" />

</LinearLayout>
