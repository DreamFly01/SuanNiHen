<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_shop_bg"
        android:background="@drawable/shop_bg"
        android:padding="30pt"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="250pt"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_Logo"
            android:layout_width="100pt"
            android:layout_height="100pt" />
        <LinearLayout
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="top"
                android:id="@+id/tv_name"
                android:textSize="@dimen/txtSize_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSize_28"
                    android:text="店铺星级："/>
                <android.support.v7.widget.RecyclerView
                    android:layout_gravity="center"
                    android:id="@+id/recyclerView_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_follow"
            android:gravity="center"
            android:padding="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_yellow_40">
            <ImageView
                android:id="@+id/iv_isFollow"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:background="@drawable/follow_no_bg"/>
            <TextView
                android:id="@+id/tv_isFollow"
                android:layout_marginLeft="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24pt"
                android:text="未关注"
                android:textColor="#FFB502"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item1"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30pt"
            android:textColor="@color/app_red"
            android:text="默认"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30pt"
            android:textColor="@color/txt_9"
            android:text="新品"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30pt"
            android:textColor="@color/txt_9"
            android:text="热销"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30pt"
            android:textColor="@color/txt_9"
            android:text="价格"/>
    </LinearLayout>
</LinearLayout>
