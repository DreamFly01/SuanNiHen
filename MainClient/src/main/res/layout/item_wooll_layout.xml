<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_hym"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_app_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:paddingLeft="30pt"
        android:paddingTop="10pt"
        android:paddingRight="30pt"
        android:textColor="@color/gray_1"
        android:textSize="@dimen/txtSize_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="30pt">

        <ImageView
            android:id="@+id/iv_product_logo1"
            android:layout_width="120pt"
            android:layout_height="120pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20pt">

            <TextView
                android:id="@+id/tv_GoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="hahahahhahahhhhhhhhhhhhh"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/txtSize_28" />

            <TextView
                android:id="@+id/tv_Number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="x1"
                android:textColor="@color/color_black_ff666666"
                android:textSize="@dimen/txtSize_28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_SalesPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥24"
                    android:textColor="@color/app_red"
                    android:textSize="@dimen/txtSize_28" />

                <TextView
                    android:id="@+id/tv_SalesPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10pt"
                    android:text="x1"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/txtSize_28" />
            </LinearLayout>

            <TextView

                android:id="@+id/tv_BargainPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="已薅羊毛"
                android:textColor="@color/app_red"
                android:textSize="@dimen/txtSize_28" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2pt"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30pt"
        android:paddingTop="10pt"
        android:paddingRight="30pt"
        android:paddingBottom="10pt">

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:background="@drawable/clock_bg2" />

        <TextView
            android:id="@+id/tv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:text="剩余时间："
            android:textColor="@color/gray_1"
            android:textSize="24pt" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/shape_soild_red_bg"
                android:paddingLeft="15pt"
                android:paddingTop="10pt"
                android:paddingRight="15pt"
                android:paddingBottom="10pt"
                android:text="前往薅羊毛"
                android:textColor="@color/white"
                android:textSize="@dimen/txtSize_28" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
