<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30pt"
    android:id="@+id/rl_entry_company"
    android:visibility="gone"
    >
    <ImageView
        android:layout_marginTop="80pt"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="400pt"
        android:background="@drawable/mercanttype_company_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtSize_28"
        android:text="适合公司/企业入驻，提供营业执照等资料即可入驻"
        android:textColor="@color/app_red"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_company"
            android:layout_marginTop="20pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_look"
            android:layout_marginTop="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtSize_28"
            android:text="查看店铺类型和资质说明>>"
            android:textColor="@color/app_red"/>
    </LinearLayout>

</RelativeLayout>
