<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_heard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_red_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20pt">

            <LinearLayout
                android:id="@+id/heard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="40pt">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="30pt"
                    android:src="@drawable/left_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/heard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="36pt" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_more_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20pt"
                android:background="@drawable/shape_range_gray_10_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50pt"
                    android:paddingTop="5pt"
                    android:paddingRight="50pt"
                    android:paddingBottom="5pt"
                    android:text="展开更多"
                    android:textColor="@color/txt_dark"
                    android:textSize="30pt" />

                <ImageView
                    android:id="@+id/iv_upOrdown"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_down" />
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_heard"
                android:layout_marginLeft="12pt"
                android:layout_marginTop="21pt"
                android:layout_marginRight="12pt"
                android:layout_marginBottom="20pt"
                app:cardCornerRadius="20pt"
                app:cardElevation="20pt"
                app:contentPadding="20pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:text="包装费"
                        android:textColor="#414141"
                        android:textSize="26pt" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="8pt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:layout_marginRight="20pt"
                        android:layout_weight="1"
                        android:background="@drawable/line_dashes"
                        android:layerType="software" />

                    <TextView
                        android:id="@+id/tv_money1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="￥0.6"
                        android:textColor="#414141"
                        android:textSize="26pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:text="商家优惠"
                        android:textColor="#414141"
                        android:textSize="26pt" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="8pt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:layout_marginRight="20pt"
                        android:layout_weight="1"
                        android:background="@drawable/line_dashes"
                        android:layerType="software" />

                    <TextView
                        android:id="@+id/tv_money2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="￥0.6"
                        android:textColor="#414141"
                        android:textSize="26pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="100pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:text="平台红包"
                        android:textColor="#414141"
                        android:textSize="26pt" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="8pt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:layout_marginRight="20pt"
                        android:layout_weight="1"
                        android:background="@drawable/line_dashes"
                        android:layerType="software" />

                    <TextView
                        android:id="@+id/tv_money3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="￥0.6"
                        android:textColor="#414141"
                        android:textSize="26pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="150pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:text="积分抵扣"
                        android:textColor="#414141"
                        android:textSize="26pt" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="8pt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20pt"
                        android:layout_marginRight="20pt"
                        android:layout_weight="1"
                        android:background="@drawable/line_dashes"
                        android:layerType="software" />

                    <TextView
                        android:id="@+id/tv_money4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="￥0.6"
                        android:textColor="#414141"
                        android:textSize="26pt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_redution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240pt"
                    android:layout_weight="3"
                    android:text="已优惠￥14.6"
                    android:textColor="#414141"
                    android:textSize="26pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290pt"
                    android:layout_weight="3"
                    android:text="合计"
                    android:textColor="#414141"
                    android:textSize="36pt" />

                <TextView
                    android:id="@+id/tv_TotalMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70pt"
                    android:layout_marginTop="290pt"
                    android:layout_weight="3"
                    android:text="￥168"
                    android:textColor="@color/txt_red"
                    android:textSize="36pt" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_heard"
                android:layout_marginLeft="12pt"
                android:layout_marginTop="21pt"
                android:layout_marginRight="12pt"
                android:layout_marginBottom="20pt"
                app:cardCornerRadius="20pt"
                app:cardElevation="20pt"
                app:contentPadding="20pt">

                <LinearLayout
                    android:id="@+id/ll_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="使用优惠劵"
                        android:textColor="#414141"
                        android:textSize="26pt" />

                    <ImageView
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="联系商家：13849374839"
                        android:textColor="#414141"
                        android:textSize="30pt" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="30pt"
                        android:layout_height="30pt"
                        android:background="@drawable/call_bg"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拨打电话"
                        android:textColor="@color/txt_red"
                        android:textSize="30pt" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_heard"
                android:layout_marginLeft="12pt"
                android:layout_marginTop="21pt"
                android:layout_marginRight="12pt"
                android:layout_marginBottom="20pt"
                app:cardCornerRadius="20pt"
                app:cardElevation="20pt"
                app:contentPadding="20pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单信息:"
                        android:textColor="#414141"
                        android:textSize="30pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="口味、偏淡"
                        android:textColor="#414141"
                        android:textSize="30pt" />

                    <ImageView
                        android:layout_width="40pt"
                        android:layout_height="40pt"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单编号:"
                        android:textColor="#414141"
                        android:textSize="30pt" />

                    <TextView
                        android:id="@+id/tv_orderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30pt"
                        android:text="34476587576436545"
                        android:textColor="#414141"
                        android:textSize="30pt" />

                    <TextView
                        android:id="@+id/tv_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_gray_reangle_bg"
                        android:paddingLeft="20pt"
                        android:paddingTop="10pt"
                        android:paddingRight="20pt"
                        android:paddingBottom="10pt"
                        android:text="复制"
                        android:textColor="#414141"
                        android:textSize="30pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="下单时间:"
                        android:textColor="#414141"
                        android:textSize="30pt" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019/05/24  18:40"
                        android:textColor="#414141"
                        android:textSize="30pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="支付方式:"
                        android:textColor="#414141"
                        android:textSize="30pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="餐后支付、到店支付"
                        android:textColor="#414141"
                        android:textSize="30pt" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/txt_dark"
            android:textSize="36pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="2pt"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/txt_dark"
            android:textSize="36pt"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
