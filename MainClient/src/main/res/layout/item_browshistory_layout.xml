<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15pt"
    android:layout_marginTop="10pt"
    android:layout_marginRight="8pt"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="220pt"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_chose"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_gravity="center"
            android:layout_marginStart="15pt"
            android:layout_marginRight="15pt"
            android:background="@drawable/pay_normall"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:ellipsize="end"
                android:lines="1"
                android:paddingStart="10pt"
                android:paddingTop="10pt"
                android:text="1000000000"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/txtSize_28" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="5pt"
                android:paddingStart="10pt"
                android:paddingBottom="4pt"
                android:text="2000"
                android:textColor="@color/app_red"
                android:textSize="@dimen/txtSize_26" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
