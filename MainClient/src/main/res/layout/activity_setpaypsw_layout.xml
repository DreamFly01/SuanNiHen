<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical"

    >
    <include layout="@layout/heard_layout"></include>
    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:padding="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            android:id="@+id/et_phone"
            android:padding="20pt"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:textColor="@color/txt_dark"
            android:textColorHint="@color/gray_1"
            android:hint="请输入手机号码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="4pt"
        android:gravity="center"
        android:padding="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <EditText
            android:id="@+id/tv_code"
            android:padding="20pt"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:textColor="@color/txt_dark"
            android:textColorHint="@color/gray_1"
            android:hint="请输入验证码"/>
        <com.fdl.wedgit.IdentifyCodeView
            android:id="@+id/identify_code_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.fdl.wedgit.IdentifyCodeView>
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:visibility="gone"
    android:id="@id/ll_02"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:padding="10pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:text="支付密码"/>
        <EditText
            android:id="@+id/et_old"
            android:padding="20pt"
            android:background="@null"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:hint="请输入支付密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="4pt"
        android:padding="10pt"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:text="新支付密码"/>
        <EditText
            android:id="@+id/et_new"
            android:padding="20pt"
            android:background="@null"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:hint="再次输入支付密码"/>
    </LinearLayout>
</LinearLayout>
    <include layout="@layout/commit_layout"></include>

</LinearLayout>
