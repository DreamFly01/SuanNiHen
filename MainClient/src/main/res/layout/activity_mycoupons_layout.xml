<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_app_bg"
    android:orientation="vertical">
    <include layout="@layout/heard_layout"></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:background="@color/color_app_bg" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_order"
        app:tabIndicatorColor="@color/app_red"
        app:tabSelectedTextColor="@color/app_red"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"
        android:layout_width="match_parent"
        android:layout_height="80pt"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="20pt"
        android:id="@+id/tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
