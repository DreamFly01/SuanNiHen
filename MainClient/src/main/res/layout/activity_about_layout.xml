<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical"
    >
    <include layout="@layout/heard_layout"></include>
    <ImageView
        android:layout_marginTop="100pt"
        android:layout_gravity="center"
        android:layout_width="200pt"
        android:layout_height="200pt"
        android:background="@drawable/logo"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_marginTop="10pt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30pt"
        android:text="算你狠 Android 1.1"
        android:textColor="@color/gray_1"
        />
    <LinearLayout
        android:id="@+id/ll_01"
        android:gravity="center"
        android:layout_marginTop="20pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件许可使用协议"
            android:textSize="30pt"
            android:textColor="@color/gray_1"
            />
        <ImageView
            android:layout_width="20pt"
            android:layout_height="35pt"
            android:background="@drawable/img_aray_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_02"
        android:gravity="center"
        android:layout_marginTop="4pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="算你狠平台服务协议"
            android:textSize="30pt"
            android:textColor="@color/gray_1"
            />
        <ImageView
            android:layout_width="20pt"
            android:layout_height="35pt"
            android:background="@drawable/img_aray_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_03"
        android:gravity="center"
        android:layout_marginTop="4pt"
        android:background="@color/white"
        android:padding="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20pt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法律申明和隐私权政策"
            android:textSize="30pt"
            android:textColor="@color/gray_1"
            />
        <ImageView
            android:layout_width="20pt"
            android:layout_height="35pt"
            android:background="@drawable/img_aray_right"/>
    </LinearLayout>
</LinearLayout>
