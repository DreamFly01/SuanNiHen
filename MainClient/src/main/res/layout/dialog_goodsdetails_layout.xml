<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_app_bg"
    >
<RelativeLayout
    android:id="@+id/rl_back"
    android:padding="25pt"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品详情"
        android:textSize="30pt"
        android:textColor="@color/gray_1"
        />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="22pt"
        android:layout_height="22pt"
        android:background="@drawable/delete"
        />
</RelativeLayout>
<include layout="@layout/refresh_layout"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20pt"
        >
        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5pt"
            android:paddingTop="10pt"
            android:paddingRight="5pt"
            android:paddingBottom="10pt">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_gravity="center"
                android:src="@drawable/shopcart_logo_delete" />

            <TextView
                android:id="@+id/tv_goodsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20pt"
                android:text="1"
                android:textColor="@color/app_red"
                android:textSize="26pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_marginLeft="20pt"
                android:src="@drawable/shopcart_logo_add" />
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_addcart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/shape_soild_red_5_bg"
            android:gravity="center"
            android:paddingLeft="30pt"
            android:paddingTop="10pt"
            android:paddingRight="30pt"
            android:paddingBottom="10pt"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize_24" />
    </LinearLayout>
</LinearLayout>
