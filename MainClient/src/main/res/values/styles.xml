<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_red</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden|stateUnspecified</item>
        <item name="android:textColor">@color/spec_label</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="NoTitleTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="login_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y140</item>

        <item name="android:layout_marginLeft">@dimen/x70</item>
        <item name="android:layout_marginRight">@dimen/x70</item>
        <item name="android:layout_marginTop">@dimen/x30</item>

    </style>

    <style name="view_div_w">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1pt</item>
        <item name="android:background">@color/color_app_bg</item>

    </style>


    <style name="login_input_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y2</item>
        <item name="android:layout_marginLeft">@dimen/x70</item>
        <item name="android:layout_marginRight">@dimen/x70</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#E5E5E5</item>
    </style>

    <style name="login_input_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y120</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/et_txt_color</item>
        <item name="android:textSize">@dimen/x43</item>
        <item name="android:padding">@dimen/x5</item>
    </style>

    <style name="login_input_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y140</item>
        <item name="android:background">@drawable/bg_btn</item>

        <item name="android:layout_marginLeft">@dimen/x70</item>
        <item name="android:layout_marginRight">@dimen/x70</item>
        <item name="android:layout_marginTop">@dimen/x70</item>

        <item name="android:textColor">@color/white</item>
    </style>


    <style name="main_nav_button">
        <item name="android:layout_width">@dimen/x216</item>
        <item name="android:layout_height">@dimen/y160</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/y15</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main_nav_button_text_color</item>
        <item name="android:textSize">@dimen/x33</item>
        <item name="android:layout_weight">.2</item>
        <!--<item name="android:background">@drawable/main_nav_button_bg</item>-->
    </style>


    <style name="self_yellow_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/y15</item>
        <item name="android:layout_marginBottom">@dimen/y15</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="self_yellow_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>


    <style name="self_yellow_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
    </style>


    <style name="self_2_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

    </style>


    <style name="self_2_linearlayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/y15</item>
        <item name="android:layout_marginBottom">@dimen/y15</item>

    </style>


    <style name="self_2_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>


    <style name="self_2_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/et_txt_color</item>
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:layout_marginTop">@dimen/x10</item>
    </style>


    <style name="self_2_txt_num">
        <item name="android:layout_width">@dimen/x60</item>
        <item name="android:layout_height">@dimen/x50</item>
        <item name="android:background">@drawable/bg_txt_red_num</item>
        <item name="android:minWidth">@dimen/x40</item>
        <item name="android:padding">@dimen/x5</item>
        <item name="android:layout_marginRight">@dimen/x25</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x25</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">@dimen/x5</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultCityPickerTheme" parent="AppTheme">
        <item name="cpCancelTextSize">@dimen/cp_cancel_text_size</item>
        <item name="cpCancelTextColor">@color/cp_color_gray</item>

        <item name="cpClearTextIcon">@mipmap/cp_icon_clear_all</item>
        <item name="cpSearchTextSize">@dimen/cp_search_text_size</item>
        <item name="cpSearchTextColor">@color/cp_color_gray_dark</item>
        <item name="cpSearchHintText">@string/cp_search_hint_text</item>
        <item name="cpSearchHintTextColor">@color/cp_color_gray_light</item>
        <item name="cpSearchCursorDrawable">@color/cp_color_gray_dark</item>

        <item name="cpListItemHeight">@dimen/cp_list_item_height</item>
        <item name="cpListItemTextSize">@dimen/cp_list_item_text_size</item>
        <item name="cpListItemTextColor">@color/cp_color_gray_deep</item>

        <item name="cpEmptyIcon">@mipmap/cp_icon_empty</item>
        <item name="cpEmptyIconWidth">@dimen/cp_empty_icon_width</item>
        <item name="cpEmptyIconHeight">@dimen/cp_empty_icon_height</item>
        <item name="cpEmptyText">@string/cp_no_result</item>
        <item name="cpEmptyTextSize">@dimen/cp_empty_text_size</item>
        <item name="cpEmptyTextColor">@color/cp_color_gray_deep</item>

        <item name="cpGridItemBackground">@drawable/cp_grid_item_bg</item>
        <item name="cpGridItemSpace">@dimen/cp_grid_item_space</item>

        <item name="cpSectionHeight">@dimen/cp_section_height</item>
        <item name="cpSectionTextSize">@dimen/cp_section_text_size</item>
        <item name="cpSectionTextColor">@color/cp_color_gray</item>
        <item name="cpSectionBackground">@color/cp_color_section_bg</item>

        <item name="cpIndexBarTextSize">@dimen/cp_index_bar_text_size</item>
        <item name="cpIndexBarNormalTextColor">@color/cp_color_gray</item>
        <item name="cpIndexBarSelectedTextColor">@color/cp_color_gray_dark</item>

        <item name="cpOverlayWidth">@dimen/cp_overlay_width</item>
        <item name="cpOverlayHeight">@dimen/cp_overlay_height</item>
        <item name="cpOverlayTextSize">@dimen/cp_overlay_text_size</item>
        <item name="cpOverlayTextColor">@android:color/white</item>
        <item name="cpOverlayBackground">@drawable/cp_overlay_bg</item>
    </style>


    <style name="DefaultCityPickerAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/cp_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/cp_push_bottom_out</item>
    </style>


    <style name="CityPickerStyle" parent="AlertDialog.AppCompat">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled" tools:ignore="NewApi">true</item>

    </style>

    <style name="Dialog_FS">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled" tools:ignore="NewApi">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled" tools:ignore="NewApi">false</item><!--模糊-->
    </style>

    <style name="permision" parent="@android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--Dialog以外的区域模糊效果-->
        <item name="android:backgroundDimEnabled" tools:ignore="NewApi">false</item>
    </style>

    <!--无敌菊花转 样式 -->
    <style name="CustomProgress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode" tools:ignore="NewApi">stateUnspecified|adjustPan
        </item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialogAlpha">
        <item name="android:windowEnterAnimation">@anim/dialog_alpha_ente</item><!--进入动画-->
        <item name="android:windowExitAnimation">@anim/dialog_alpha_exit</item><!--出去动画-->
    </style>

    <style name="shopCartStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode" tools:ignore="NewApi">stateUnspecified|adjustPan
        </item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/dialog_alpha_ente</item><!--进入动画-->
        <item name="android:windowExitAnimation">@anim/dialog_alpha_exit</item><!--出去动画-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled" tools:ignore="NewApi">false</item>
    </style>

    <style name="myRating" parent="@style/Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>

    <style name="red_packet_dialog">
        2 <item name="android:windowFrame">@null</item>
        3 <item name="android:windowIsFloating">true</item>
        4 <item name="android:windowIsTranslucent">true</item>
        5 <item name="android:windowNoTitle">true</item>
        6 <item name="android:background">@android:color/transparent</item>
        7 <item name="android:windowBackground">@android:color/transparent</item>
        8 <item name="android:backgroundDimEnabled">true</item>
        9 <item name="android:backgroundDimAmount">0.6</item>
    </style>
