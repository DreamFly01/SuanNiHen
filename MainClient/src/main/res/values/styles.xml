    <style name="PermissionBlueStyle">
        <item name="PermissionTitleColor">@color/txt_dark</item>
        <item name="PermissionMsgColor">@color/txt_dark</item>
        <item name="PermissionItemTextColor">@color/txt_dark</item>
        <item name="PermissionButtonBackground">@color/app_red</item>
        <item name="PermissionBackround">@drawable/shape_bg_white</item>
        <item name="PermissionButtonTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:minHeight">60pt</item>
        <item name="android:padding">0dp</item>
        <item name="contentInsetStart">0dp</item>
